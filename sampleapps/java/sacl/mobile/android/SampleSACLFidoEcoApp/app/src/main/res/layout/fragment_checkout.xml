<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CheckoutFragment">

    <LinearLayout
        android:id="@+id/checkoutLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/strongkey_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/strongkey_logo_vertical_darkusb_small" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/productLayoutT100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/checkoutLayout">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewT100"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewT100"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight=".31"
                    android:contentDescription="@string/product_title_t100"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:src="@drawable/t100tp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/t100Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="@string/product_title_t100"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:id="@+id/t100Quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:textAppearance="?attr/textAppearanceSubtitle2" />
<!--                        android:text="@string/product_quantity"-->

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".25"
                    android:gravity="right"
                    android:text="@string/product_price_t100"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/productLayoutE1000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/productLayoutT100">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewE1000"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewE1000"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight=".28"
                    android:contentDescription="@string/product_title_e1000"
                    android:scaleX=".6"
                    android:scaleY=".6"
                    android:src="@drawable/e1000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/e1000Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="@string/product_title_e1000"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:id="@+id/e1000Quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:textAppearance="?attr/textAppearanceSubtitle2" />
<!--                        android:text="@string/product_quantity"-->

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".25"
                    android:gravity="right"
                    android:text="@string/product_price_e1000"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/productLayoutFidoCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/productLayoutE1000">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewFidoCloud"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewFidoCloud"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight=".3"
                    android:contentDescription="@string/product_title_fido_cloud"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:src="@drawable/fidocloud" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fidoCloudName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="@string/product_title_fido_cloud"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:id="@+id/fidoCloudQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:textAppearance="?attr/textAppearanceSubtitle2" />
<!--                        android:text="@string/product_quantity"-->

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".25"
                    android:gravity="right"
                    android:text="@string/product_price_fido_cloud"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/productLayoutTellaroCloud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/productLayoutFidoCloud">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewTellaroCloud"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewTellaroCloud"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight=".3"
                    android:contentDescription="@string/product_title_tellaro_cloud"
                    android:scaleX=".7"
                    android:scaleY=".7"
                    android:src="@drawable/tellarocloud" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tellaroCloudName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:text="@string/product_title_tellaro_cloud"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <TextView
                        android:id="@+id/tellaroCloudQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".25"
                        android:textAppearance="?attr/textAppearanceSubtitle2" />
<!--                        android:text="@string/product_quantity"-->

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".25"
                    android:gravity="right"
                    android:text="@string/product_price_tellaro_cloud"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/totalPriceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/productLayoutTellaroCloud">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight=".3"
                    android:text="@string/product_price_total_label"
                    android:textAppearance="?attr/textAppearanceHeadline6" />


                <TextView
                    android:id="@+id/checkoutTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".3"
                    android:gravity="right"
                    android:textAppearance="?attr/textAppearanceHeadline6" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@+id/totalPriceLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="end"
                android:layout_weight=".25"
                android:layout_marginTop="8dp"
                android:text="@string/label_submit_transaction"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>